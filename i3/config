# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
	#font pango: TerminessTTF Nerd Font Mono, TerminessTTF NF, TerminessTTF Nerd Font:style=Regular 12
  font pango: SFNS Display, ProFontIIx Nerd Font, ProFontIIx NF 9
  status_command i3status --config ~/.config/i3/i3status.conf
  position top
  tray_output primary
  colors {
  	background $bg-color
    #statusline $active-text-color-bar
    separator  #757575
          #                  border               background              text
    focused_workspace        $bg-color            $active-bg-color-bar    $active-text-color-bar
    inactive_workspace       $bg-color            $inactive-bg-color-bar  $inactive-text-color-bar
    urgent_workspace         $bg-color            $urgent-bg-color-bar    $urgent-text-color-bar
  }
}

#bar toggle
bindsym $mod+m bar mode toggle

# Various Exits
set $Locker i3lock-fancy && sleep 1

bindsym $mod+0 mode "$mode_system"
set $mode_system (l)ock, (e)xit, switch_(u)ser, (s)uspend, (h)ibernate, (r)eboot, (Shift+s)hutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id $Locker, mode "default"
    bindsym s exec --no-startup-id systemctl suspend, mode "default"
    #bindsym u exec --no-startup-id i3exit switch_user, mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    bindsym h exec --no-startup-id systemctl hibernate, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym Shift+s exec --no-startup-id systemctl poweroff, mode "default"

    # exit system mode: "Enter" or "Escape"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

